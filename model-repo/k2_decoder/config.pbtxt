name: "k2_decoder"
backend: "k2_decoder"

input [
  {
    name: "encoder_outputs"
    data_type: TYPE_FP32
    dims: [-1, -1, 1030]  # [batch_size, time_steps, vocab_size] - logits from decoder_joint
  }
]

output [
  {
    name: "tokens"
    data_type: TYPE_INT32
    dims: [-1, -1]  # [batch_size, sequence_length] - decoded token sequence
  }
]

parameters: {
  key: "DECODING_GRAPH_PATH"
  value: {
    string_value: "HLG.pt"
  }
}

instance_group [
  {
    count: 1
    kind: KIND_GPU
    gpus: [0]
  }
]

dynamic_batching {
  max_queue_delay_microseconds: 5000
}

optimization {
  cuda {
    graphs: true
  }
}